@using PRUNStatsCommon
@using Microsoft.EntityFrameworkCore
@using PRUNStatsCommon.Companies.Services
@attribute [Route(RouteConstants.Company + "{companyId:guid}")]
@inject IDbContextFactory<StatsContext> _contextFactory

<PageTitle>@LoadedCompanyName - PRUNStats</PageTitle>

<MudStack>
    @if (LoadedCompany is null)
    {
        <MudSpacer/>
        <MudProgressCircular Indeterminate Size="Size.Large" Color="Color.Secondary" />
        <MudSpacer />
    }
    else
    {
        <MudPaper Class="pa-3">
            <MudText Typo="Typo.h5">Code:</MudText>
            <MudText Typo="Typo.h5">Company: @LoadedCompany.CompanyName</MudText>
            <MudText Typo="Typo.h5">User: @LoadedCompany.CompanyName</MudText>
        </MudPaper>
    }
</MudStack>