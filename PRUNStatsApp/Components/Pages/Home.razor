@using Microsoft.EntityFrameworkCore
@using PRUNStatsCommon
@attribute [Route(RouteConstants.Home)]
@inject IDbContextFactory<StatsContext> _contextFactory

<PageTitle>PRUNStats</PageTitle>

<MudContainer MaxWidth="MaxWidth.False">
    <MudStack
        Class="mud-height-full mud-width-full"
        Wrap="Wrap.Wrap"
        Justify="Justify.SpaceAround"
        StretchItems="StretchItems.End"
        AlignItems="AlignItems.Center"
    >
        
        <MudText Typo="Typo.h2" Align="Align.Center">
            Welcome to PRUNStats
        </MudText>
        <MudText Typo="Typo.subtitle1" Align="Align.Center">
            Providing insights into the economy of Prosperous Universe since 2024
        </MudText>

        <br />

        <MudText Typo="Typo.h4" Align="Align.Center">Currently tracking</MudText>
        <br />
        <MudStack Row Wrap="Wrap.Wrap" Spacing="5" AlignItems="AlignItems.Center" Justify="Justify.Center">

            <MudPaper Class="pa-3">
                exactly
                <MudText Inline Typo="Typo.h6" Color="Color.Secondary" Inline>@TrackedCompanies.ToString("N0")</MudText>
                <MudText Inline Typo="Typo.h6">companies</MudText>
            </MudPaper>

            <MudPaper Class="pa-3">
                with
                <MudText Inline Typo="Typo.h6" Color="Color.Secondary" Inline>@TrackedBases.ToString("N0")</MudText>
                <MudText Inline Typo="Typo.h6">bases</MudText>
            </MudPaper>

            <MudPaper Class="pa-3">
                on
                <MudText Inline Typo="Typo.h6" Color="Color.Secondary" Inline>@TrackedPlanets.ToString("N0")</MudText>
                <MudText Inline Typo="Typo.h6">planets</MudText>
            </MudPaper>

            <MudPaper Class="pa-3">
                for
                <MudText Inline Typo="Typo.h6" Color="Color.Secondary" Inline>@TrackedPlayers.ToString("N0")</MudText>
                <MudText Inline Typo="Typo.h6">players</MudText>
            </MudPaper>

            <MudPaper Class="pa-3">
                in
                <MudText Inline Typo="Typo.h6" Color="Color.Secondary" Inline>@TrackedCorporations.ToString("N0")</MudText>
                <MudText Inline Typo="Typo.h6">corporations</MudText>
            </MudPaper>

        </MudStack>

        <MudSpacer />

        <MudText Typo="Typo.subtitle2">
            <MudSpacer></MudSpacer>
            Made by _sashkaa | Powered by the amazing 
            <MudLink Href="https://fnar.net/page/projects/" Target="_blank" Typo="Typo.body2" Color="Color.Primary">
                FIORest API
            </MudLink>
        </MudText>
    </MudStack>
</MudContainer>